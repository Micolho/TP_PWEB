@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            
            @*<div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>*@
            @*<div class="form-group">
                <input type="hidden" asp-for="Input.PhoneNumber" class="form-control" />
            </div>*@
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Input.NIF"></label>
                <input asp-for="Input.NIF" class="form-control" />
                <span asp-validation-for="Input.NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CC"></label>
                <input asp-for="Input.CC" class="form-control" />
                <span asp-validation-for="Input.CC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Morada"></label>
                <input asp-for="Input.Morada" class="form-control" />
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumeroTelemovel"></label>
                <input asp-for="Input.NumeroTelemovel" class="form-control" />
                <span asp-validation-for="Input.NumeroTelemovel" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}