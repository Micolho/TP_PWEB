@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Create a new account.</h4>
<hr />
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
  <div class="row justify-content-center">
    <div class="col-md-4">
        

@*            <div asp-validation-summary="All" class="text-danger"></div> we already have error for each box*@
            
            <div>
                <input asp-for="Input.Gestor"  class="form-check-input" type="checkbox" value="false"/>
                <label asp-for="Input.Gestor" class="form-check-label"></label>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Input.NIF"></label>
                <input asp-for="Input.NIF" class="form-control" />
                <span asp-validation-for="Input.NIF" class="text-danger"></span>
            </div>   
            <div class="form-group">
                <label asp-for="Input.CC"></label>
                <input asp-for="Input.CC" class="form-control" />
                <span asp-validation-for="Input.CC" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Input.NumeroTelemovel"></label>
                <input asp-for="Input.NumeroTelemovel" class="form-control" />
                <span asp-validation-for="Input.NumeroTelemovel" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Input.DataDeNascimento"></label>
                <input asp-for="Input.DataDeNascimento" class="form-control" />
                <span asp-validation-for="Input.DataDeNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Morada"></label>
                <input asp-for="Input.Morada" class="form-control" />
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div> 

            <button type="submit" class="btn btn-primary">Register</button>
        
        </div>
  </div>
  <hr />
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
