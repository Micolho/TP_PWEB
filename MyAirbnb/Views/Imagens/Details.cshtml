@model MyAirbnb.Models.Imagens

@{
    ViewData["Title"] = "Details";
}

<div style="margin-top:50px;margin-bottom:50px">
    <img src=@Model.FilePath class="img-thumbnail">
</div>

@if (User.IsInRole("Gestor") || User.IsInRole("Admins"))
{
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Cancel</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id=@Model.Id method="post">Delete</a>
}

