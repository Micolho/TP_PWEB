@model MyAirbnb.Models.Empresa

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dono.Nome)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Funcionarios)
        </dt>
        </dl>

        <table class="table table-hover">
            <thead></thead>
            <tbody>
                @foreach (var funcionario in @Model.Funcionarios)
                {
                    <tr>
                    <td>
                        @Html.DisplayFor(model => funcionario.Nome)
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
