@model IEnumerable<MyAirbnb.Models.Empresa>

@{
    ViewData["Title"] = "My Enterprise";
}

<h1>My Enterprise</h1>

@if(Model.Count() == 0)
{
  <p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>  
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dono.Nome)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="EditFuncionarios" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
