<!DOCTYPE html>
<html lang="en">
<head>
    <meta charstop-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyAirbnb</title>
@*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
@*    <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="~/css/bootstrap-custom.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-custom.css" />
</head>
<body style="margin-bottom:100px">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">MyAirbnb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @*@if(User.IsInRole("Admins")){*@
@*                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown", href="#"
                                role="button" aria-expanded="false">Categorias</a>
                                <div class ="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Categoria" asp-action="Index">See Categories</a>
                                </div>
                            </li>*@

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Imovel"
                                asp-action="Index">Imovel</a>
                            </li>

                            @if (User.IsInRole("Admins"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Categoria"
                                    asp-action="Index">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Administration"
                                    asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Imagens"
                                    asp-action="Index">Images</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Classificacao"
                                    asp-action="Index">Reviews</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresa"
                                    asp-action="IndexAdmin">Enterprises</a>
                                </li>
                            }
                            @if (User.IsInRole("Gestor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresa"
                                    asp-action="Index">My company</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Checklist"
                                    asp-action="Index">Checklists</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reserva"
                                    asp-action="Index">Reservations</a>
                                </li>
                            }
                            @*@if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller=""
                                    asp-action="">Your History</a>
                                </li>
                            }*@

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom" style="background-color:white">
        <div class="container">
            &copy; 2022 - MyAirbnb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
