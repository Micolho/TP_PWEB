@model MyAirbnb.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataCheckin" class="control-label"></label>
                <input asp-for="DataCheckin" type="text" readonly="readonly" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataCheckout" class="control-label"></label>
                <input asp-for="DataCheckout" type="text" readonly="readonly" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Property Name: </label>
                <input asp-for="Imovel.Nome" readonly="readonly" class="form-control"/>
                <input asp-for="ImovelId" type="hidden" class="form-control"/>
                <a class="btn alert-primary btn-sm" asp-controller="Imovel"
                asp-action="Details" asp-route-id="@Model.Imovel.Id">Detalhes do Imovel</a>
            
            </div>
            <div class="form-group">
                <label  class="control-label">Client Name:</label>
                <input asp-for="Cliente.Nome" readonly="readonly" class="form-control"/>
                <input asp-for="ClienteId" type="hidden" class="form-control"/>
                <a class="btn alert-primary btn-sm" asp-controller="ApplicationUser"
                asp-action="Details" asp-route-id="@Model.ClienteId">Detalhes do Cliente</a>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Confirmado" /> 
                    @Html.DisplayNameFor(model => model.Confirmado)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
